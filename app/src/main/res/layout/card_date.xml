<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_date_mcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        style="@style/Widget.App.CardViewMyFilled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_date_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <Button
                    android:id="@+id/card_date_button_selected"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="42sp"
                    android:text="Mart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/card_date_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="42sp"
                    android:text="Mart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/card_date_left_arrow"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/ripple_button"
                app:layout_constraintBottom_toBottomOf="@+id/card_date_buttons"
                app:layout_constraintEnd_toStartOf="@+id/card_date_buttons"
                app:layout_constraintTop_toTopOf="@+id/card_date_buttons">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:backgroundTint="#00000000"
                    android:src="@drawable/vector_left_arrow" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_date_right_arrow"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/ripple_button"
                app:layout_constraintBottom_toBottomOf="@+id/card_date_buttons"
                app:layout_constraintStart_toEndOf="@+id/card_date_buttons"
                app:layout_constraintTop_toTopOf="@+id/card_date_buttons">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:backgroundTint="#00000000"
                    android:src="@drawable/vector_right_arrow" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>